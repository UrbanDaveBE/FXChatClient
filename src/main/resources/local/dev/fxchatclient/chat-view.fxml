<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="local.dev.fxchatclient.controller.ChatController"
            fx:id="rootPane"
            prefHeight="400.0" prefWidth="400.0">

    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.25">

        <VBox  maxWidth="200.0" minWidth="150.0" spacing="5.0" style="-fx-padding: 10;">
                <Label text="Benutzerliste:"/>
                <ListView fx:id="userListView" VBox.vgrow="ALWAYS"/>
        </VBox>

        <VBox>
                <ListView fx:id="chatListView" VBox.vgrow="ALWAYS"/>

                <HBox spacing="5.0" style="-fx-padding: 10;">
                    <TextField fx:id="messageInput" promptText="Nachricht eingeben..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="sendButton" text="Senden" onAction="#handleSendMessage"/>
                </HBox>
        </VBox>

    </SplitPane>

</VBox>